{
  "name": "membership-airbnb",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://github.com/aereeeee/membership-airbnb.git",
  "author": "aereeeee <dofl5576@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "client:build": "yarn workspace client build",
    "client:dev": "yarn workspace client dev",
    "server:start": "yarn workspace server nodemon app.js",
    "server:apidoc": "yarn workspace server apidoc -i server/ -o server/apidoc/ -e node_modules/",
    "server:test": "yarn workspace server jest /test/*.spec.js",
    "release": "standard-version"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss}": [
      "git add"
    ]
  }
}
